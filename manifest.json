{
  "manifest_version": 2,
  "name": "rakucopi_url",
  "version": "1.0.0",
  "description": "URLを加工してコピーし、マークダウン記法の文書に貼り付けやすいようにする",

  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "contextMenus"],

  "icons": {
    "16": "icon/MdCopy_icon16.png",
    "24": "icon/MdCopy_icon24.png",
    "32": "icon/MdCopy_icon32.png",
    "48": "icon/MdCopy_icon32.png"
  },

  "browser_action": {
    "default_icon": {}
  }
}
