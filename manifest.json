{
  "manifest_version": 2,
  "name": "rakucopi_url",
  "version": "1.0",
  "description": "URLを加工してコピーし、マークダウン記法の文書に貼り付けやすいようにする",

  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "contextMenus"]
}
